package com.kh.start.member.model.dto;

import jakarta.validation.constraints.NotBlank;
import jakarta.validation.constraints.Pattern;
import jakarta.validation.constraints.Size;
import lombok.AllArgsConstructor;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;
import lombok.ToString;

@Getter
@Setter
@NoArgsConstructor
@AllArgsConstructor
@ToString
public class MemberDTO {
	@Size(min=5,max=20, mesaage="아이디 값은 5글자 이상 20글자 이하만 사용할 수 있습니다.") //길이가 5~20자여야한다.
	@Pattern(regexp="^[a-zA-Z0-9]*$",message="아이디값은 영어/숫자만 사용가능합니다.") //정규표현식 ^:시작 a-zA-Z : 영문자(대소문자) 0-9:숫자 0~9까지허용 *:아무것도 입력한해도됨 $:끝
	@NotBlank(message="아이디 값은 비어있을 수없습니다.") //공백이면 안된다.
	private String memberId;
	@Size(min=5,max=20)(mesaage="아이디 값은 5글자 이상 20글자 이하만 사용할 수 있습니다.")
	@Pattern(regexp="^[a-zA-Z0-9]*$",message="아이디값은 영어/숫자만 사용가능합니다.")
	@NotBlank (message="아이디 값은 비어있을 수없습니다.")
	//만약 내가 한 규정에 어긋난값을 입력하면 에러가 나오는데 그에러를 처리해주는 핸들러를 만든다 또한 메세지 까지 보내는걸로
	private String memberPwd;
	private String memberName;
	private String role;

}
